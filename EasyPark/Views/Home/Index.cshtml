@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        /* Navbar Styles */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #007bff;
            padding: 10px 20px;
            color: white;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

            .navbar .nav-links {
                display: flex;
                flex-grow: 1;
                justify-content: center;
            }

                .navbar .nav-links a {
                    color: white;
                    text-decoration: none;
                    padding: 10px 20px;
                    font-size: 16px;
                }

                    .navbar .nav-links a:hover {
                        background-color: #0056b3;
                        border-radius: 4px;
                    }

            .navbar .brand {
                font-size: 1.5rem;
                font-weight: bold;
            }

            .navbar .login-link {
                margin-left: auto;
                padding: 10px 20px;
                background-color: #0056b3;
                color: white;
                text-decoration: none;
                font-size: 16px;
                border-radius: 4px;
            }

                .navbar .login-link:hover {
                    background-color: #003d7a;
                }

        .main-content {
            margin-top: 60px; /* To avoid content being hidden behind the fixed navbar */
            text-align: center;
        }

        .footer-text {
            position: fixed;
            bottom: 10px; /* Adjusted space from the bottom */
            left: 20px; /* Space from the left */
            font-size: 1.5rem; /* Increased font size */
            color: #333; /* Text color */
            background-color: #fff; /* Background color for contrast */
            padding: 15px; /* Padding for better appearance */
            border-radius: 4px; /* Rounded corners */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Shadow for better visibility */
            max-width: 300px; /* Maximum width */
            z-index: 2000; /* Ensure it's above other content */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <div class="navbar">
        <div class="brand">EasyPark</div>
        <div class="nav-links">
            <a href="#">Para Empresas</a>
            <a href="#">Para Estacionamentos</a>
            <a href="#">Onde Estamos</a>
            <a href="#">Quem Somos</a>
        </div>
        <a href="@Url.Action("Create", "Usuario")" class="login-link">Login</a>
    </div>

    <!-- Footer Text -->
    <div class="footer-text">
        Seu carro mais seguro em ambientes bem alocados, tudo isso em um só benefício.
    </div>
</body>
</html>
